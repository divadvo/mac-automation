{
  "permissions": {
    "allow": [
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git show:*)",
      "Bash(git stash list:*)",
      "Bash(git fetch:*)",
      "Bash(git rev-parse:*)",
      "Bash(git worktree list:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh repo view:*)",
      "Bash(gh issue view:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(which:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(file:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(tree:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(diff:*)",
      "Bash(npm list:*)",
      "Bash(npm outdated:*)",
      "Bash(uv pip list:*)",
      "Bash(brew list:*)",
      "Bash(brew info:*)",
      "Bash(make:*)",
      "Bash(python --version:*)",
      "Bash(node --version:*)",
      "Bash(whoami:*)",
      "Bash(date:*)",
      "Bash(du:*)",
      "Bash(df:*)",
      "Bash(ps:*)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:pypi.org)",
      "WebFetch(domain:npmjs.com)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/secrets/**)",
      "Read(**/*credential*)",
      "Bash(rm -rf /*)",
      "Bash(sudo:*)"
    ]
  },
  "autoUpdatesChannel": "stable",
  "cleanupPeriodDays": 30,
  "showTurnDuration": true,
  "respectGitignore": true,
  "attribution": false
}
