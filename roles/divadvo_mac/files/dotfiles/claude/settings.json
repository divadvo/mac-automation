{
  "respectGitignore": true,
  "cleanupPeriodDays": 30,
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git show:*)",
      "Bash(git stash list:*)",
      "Bash(git fetch:*)",
      "Bash(git rev-parse:*)",
      "Bash(git worktree list:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh repo view:*)",
      "Bash(gh issue view:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(which:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(file:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(tree:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(diff:*)",
      "Bash(npm list:*)",
      "Bash(npm outdated:*)",
      "Bash(uv pip list:*)",
      "Bash(brew list:*)",
      "Bash(brew info:*)",
      "Bash(make:*)",
      "Bash(python --version:*)",
      "Bash(node --version:*)",
      "Bash(whoami:*)",
      "Bash(date:*)",
      "Bash(du:*)",
      "Bash(df:*)",
      "Bash(ps:*)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:pypi.org)",
      "WebFetch(domain:npmjs.com)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/secrets/**)",
      "Read(**/*credential*)",
      "Bash(sudo:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); cwd=$(echo \"$input\" | jq -r '.workspace.current_dir'); short_dir=\"${cwd/#$HOME/~}\"; git_info=\"\"; if git -C \"$cwd\" rev-parse --git-dir > /dev/null 2>&1; then branch=$(git -C \"$cwd\" -c core.useReplaceRefs=false -c gc.auto=0 branch --show-current 2>/dev/null); [ -z \"$branch\" ] && branch=$(git -C \"$cwd\" -c core.useReplaceRefs=false -c gc.auto=0 rev-parse --short HEAD 2>/dev/null); if [ -n \"$branch\" ]; then if ! git -C \"$cwd\" -c core.useReplaceRefs=false -c gc.auto=0 diff --quiet 2>/dev/null || ! git -C \"$cwd\" -c core.useReplaceRefs=false -c gc.auto=0 diff --cached --quiet 2>/dev/null; then git_info=\" [$branch *]\"; else git_info=\" [$branch]\"; fi; fi; fi; echo \"${short_dir}${git_info}\""
  },
  "autoUpdatesChannel": "stable",
  "showTurnDuration": true
}
