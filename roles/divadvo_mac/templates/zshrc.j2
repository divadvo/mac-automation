if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="powerlevel10k/powerlevel10k"
zstyle ':omz:update' mode auto
zstyle ':omz:update' frequency 13
ZOXIDE_CMD_OVERRIDE=cd
plugins=(git fzf zoxide mise macos common-aliases cp)
source $ZSH/oh-my-zsh.sh

[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# Environment
export RIPGREP_CONFIG_PATH=~/.config/ripgreprc
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR=vim
else
  export EDITOR='code --wait'
fi

# PATH
export PATH=~/bin:~/pr/github/divadvo-scripts:~/.local/bin:/opt/homebrew/opt/postgresql@{{ postgresql_version }}/bin:$PATH

# Functions
function chpwd_ls { ls }
add-zsh-hook chpwd chpwd_ls

rgd() { rg --json "$@" | delta; }
rgcountsum() { rg --count "$@" | awk -F: '{sum += $2} END {print sum}'; }

# Aliases
alias pbc=pbcopy
alias pbp=pbpaste
alias toggle-dark-mode='osascript -e "tell app \"System Events\" to tell appearance preferences to set dark mode to not dark mode"'
alias o=open
alias e='${(z)VISUAL:-${(z)EDITOR}}'
